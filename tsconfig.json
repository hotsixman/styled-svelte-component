{
  "include": [
    "**/*.ts"
  ],
  "compilerOptions": {
    // "incremental": true,
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext"
  }
}